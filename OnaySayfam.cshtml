@{
    ViewBag.Title = "OnaySayfam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/custom.css" />
    <style>
        /* Navbar yüksekliğine göre içeriği aşağı it */
        body {
            padding-top: 80px; /* Navbar yüksekliğine göre ayarla */
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            flex: 1;
        }

        .card {
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.2s ease-in-out;
            display: flex;
            flex-direction: column;
        }

            .card:hover {
                transform: scale(1.05);
            }

            .card img {
                height: 200px;
                object-fit: cover;
            }
    </style>
</head>

<div class="container d-flex flex-column">
    <h2 class="text-center my-4">Onay Bekleyen Ürünlerim</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <img src="https://via.placeholder.com/300" class="card-img-top" alt="Ürün 1">
                <div class="card-body text-center">
                    <h5 class="card-title">Ürün 1</h5>
                    <p class="text-warning fw-bold">Onay Bekliyor</p>
                    <p class="text-muted">Ürün açıklaması burada yer alır.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <img src="https://via.placeholder.com/300" class="card-img-top" alt="Ürün 2">
                <div class="card-body text-center">
                    <h5 class="card-title">Ürün 2</h5>
                    <p class="text-danger fw-bold">Onaylanmadı</p>
                    <p class="text-muted">Ürün açıklaması burada yer alır.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <img src="https://via.placeholder.com/300" class="card-img-top" alt="Ürün 3">
                <div class="card-body text-center">
                    <h5 class="card-title">Ürün 3</h5>
                    <p class="text-success fw-bold">Onaylandı</p>
                    <p class="text-muted">Ürün açıklaması burada yer alır.</p>
                </div>
            </div>
        </div>
    </div>
</div>
