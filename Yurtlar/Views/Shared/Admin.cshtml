
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - KYK Pazar Yönetim</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts & FontAwesome -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <!-- jQuery & Bootstrap -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="~/Content/custom.css" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
            margin: 0;
        }

        .admin-container {
            display: flex;
            width: 100%;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            padding-top: 20px;
            min-height: 100vh;
        }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

                .sidebar ul li {
                    padding: 15px;
                }

                    .sidebar ul li a {
                        color: white;
                        text-decoration: none;
                        display: block;
                    }

                        .sidebar ul li a:hover, .sidebar ul li .active {
                            background-color: #495057;
                        }

        .content {
            flex-grow: 1;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <nav class="sidebar">
            <ul>
                <li><a href="#" class="active"><i class="fas fa-users"></i> Kullanıcılar</a></li>
                <li><a href="#"><i class="fas fa-check-circle"></i> Onaylar</a></li>
                <li><a href="#"><i class="fas fa-shopping-cart"></i> Aktif Satışlar</a></li>
            </ul>
        </nav>
        <main class="content">
            <h1>@ViewBag.Title - Yönetim Paneli</h1>
            <div class="body-content">
                @RenderBody()
            </div>
        </main>
    </div>
</body>
</html>

