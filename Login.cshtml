@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KYK Pazar Girişi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="w-96 shadow-lg rounded-2xl p-6 bg-white">
        <h2 class="text-center text-2xl font-semibold mb-6">KYK Pazar Girişi</h2>
        <div class="flex flex-col space-y-4">
            <div class="relative">
                <span class="absolute left-3 top-3 text-gray-400">👤</span>
                <input type="text" placeholder="Kullanıcı Adı" class="pl-10 w-full p-2 border rounded" id="username">
            </div>
            <div class="relative">
                <span class="absolute left-3 top-3 text-gray-400">🔒</span>
                <input type="password" placeholder="Şifre" class="pl-10 w-full p-2 border rounded" id="password">
            </div>
            <button class="w-full bg-blue-600 text-white p-2 rounded hover:bg-blue-700" onclick="handleLogin()">Giriş Yap</button>
        </div>
    </div>
    <script>
        function handleLogin() {
            let username = document.getElementById('username').value;
            let password = document.getElementById('password').value;
            console.log("Logging in with", username, password);
        }
    </script>
</body>
</html>
